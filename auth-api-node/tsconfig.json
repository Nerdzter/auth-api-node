{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                        
    "rootDir": "./src",                          
    "outDir": "./dist",                          
    "strict": true,                              
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                        
    "moduleResolution": "node",                  
    "resolveJsonModule": true,                   
    "noImplicitAny": false,                      
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
